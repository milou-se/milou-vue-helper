{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src"
  ],
  "include": ["src", "example"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}